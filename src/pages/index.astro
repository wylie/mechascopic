---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
const withBase = (path: string) => `${import.meta.env.BASE_URL}${path.replace(/^\//, "")}`;
import FeaturedVideos from "../components/FeaturedVideos.astro";
---

<Layout title="Mechascopic, PvE strategy, builds, and chill gameplay." description="Guides, gear, and calm PvE content. Subscribe for the latest builds and strategies.">
  <main>
    <section class="hero">
      <h1>Mechascopic, PvE strategy, builds, and chill gameplay.</h1>
      <p>Guides, gear, and calm PvE content. Subscribe for the latest builds and strategies.</p>
      <div class="cta-row">
        <Button href="https://youtube.com/@mechascopic" text="Subscribe on YouTube" />
        <Button href={withBase("/guides")} text="Latest Guides" />
        <Button href={withBase("/gear")} text="Gear I Use" />
      </div>
    </section>

    <section>
      <h2>Latest Guides</h2>
      <!-- Latest guides list will be rendered here -->
    </section>

    <FeaturedVideos />

    <section>
      <h2>Newsletter</h2>
      <!-- Newsletter signup will be rendered here -->
    </section>
  </main>
</Layout>

<style>
  .hero {
    text-align: center;
    margin-bottom: 2.5rem;
  }
  .cta-row {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
    margin-top: 1.5rem;
  }
</style>