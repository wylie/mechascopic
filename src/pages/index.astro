---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
import FeaturedVideos from "../components/FeaturedVideos.astro";
import AdSlot from "../components/AdSlot.astro";
const base = import.meta.env.BASE_URL;
const guidesHref = base + "guides";
const gearHref = base + "gear";
---

<Layout title="Mechascopic, PvE strategy, builds, and chill gameplay." description="Guides, gear, and calm PvE content. Subscribe for the latest builds and strategies.">
  <main>
    <section class="hero">
      <h1>Mechascopic, PvE strategy, builds, and chill gameplay.</h1>
      <p>Guides, gear, and calm PvE content. Subscribe for the latest builds and strategies.</p>
      <div class="cta-row">
        <Button href="https://youtube.com/@mechascopic" text="Subscribe on YouTube" target="_blank" />
        <Button href={guidesHref} text="Latest Guides" />
        <Button href={gearHref} text="Gear I Use" />
      </div>
    </section>

    <AdSlot label="Home, below hero" minHeight="110px" />

    <section>
      <h2>Latest Guides</h2>
      <!-- Latest guides list will be rendered here -->
    </section>

    <FeaturedVideos />

    <AdSlot label="Home, below videos" minHeight="140px" />

    <section>
      <h2>Newsletter</h2>
      <!-- Newsletter signup will be rendered here -->
    </section>
  </main>
</Layout>

<style>
  .hero {
    text-align: center;
    margin-bottom: 2.5rem;
  }
  .cta-row {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
    margin-top: 1.5rem;
  }
</style>