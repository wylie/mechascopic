---
// Layout: Base site layout for Mechascopic
import { SITE } from "../config";
const withBase = (path: string) => `${import.meta.env.BASE_URL}${path.replace(/^\//, "")}`;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{Astro.props.title ? Astro.props.title + ' | ' + SITE.name : SITE.name}</title>
    <meta name="description" content={Astro.props.description || SITE.description} />
    <link rel="canonical" href={SITE.url + Astro.url.pathname} />
    <slot name="head" />
  </head>
  <body>
    <a href="#main" class="skip-link">Skip to content</a>
    <header>
      <nav>
        <a href={withBase("/")}>Home</a>
        <a href={withBase("/guides")}>Guides</a>
        <a href={withBase("/gear")}>Gear</a>
        <a href={withBase("/about")}>About</a>
        <a href={withBase("/contact")}>Contact</a>
      </nav>
    </header>
    <main id="main">
      <slot />
    </main>
    <footer>
      <p>&copy; {new Date().getFullYear()} Mechascopic. All rights reserved.</p>
    </footer>
  </body>
</html>

<style>
  /*
    Global stylesheet for Mechascopic
    - Mobile-first, dark mode, accessible
    - Clean, readable typography
    - Polished buttons, nav, spacing, cards
  */
  :root {
    --color-bg: #181a1b;
    --color-bg-alt: #232527;
    --color-fg: #f3f4f6;
    --color-accent: #4fd1c5;
    --color-link: #7dd3fc;
    --color-link-hover: #38bdf8;
    --color-border: #2d2f31;
    --font-main: 'Inter', system-ui, sans-serif;
    --font-mono: 'Fira Mono', monospace;
    --radius: 8px;
    --transition: 0.15s cubic-bezier(.4,0,.2,1);
  }
  html {
    background: var(--color-bg);
    color: var(--color-fg);
    font-family: var(--font-main);
    font-size: 18px;
    line-height: 1.6;
    -webkit-font-smoothing: antialiased;
    scroll-behavior: smooth;
  }
  body {
    margin: 0;
    background: var(--color-bg);
    color: var(--color-fg);
  }
  a {
    color: var(--color-link);
    text-decoration: underline;
    transition: color var(--transition);
  }
  a:hover {
    color: var(--color-link-hover);
  }
  header {
    background: var(--color-bg-alt);
    border-bottom: 1px solid var(--color-border);
    padding: 0.5rem 0;
  }
  header nav {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    align-items: center;
    font-size: 1.1rem;
    padding: 0.5rem 0;
  }
  header nav a {
    color: var(--color-link);
    text-decoration: none;
    font-weight: 500;
    padding: 0.25em 0.5em;
    border-radius: var(--radius);
    transition: background var(--transition), color var(--transition);
  }
  header nav a:hover, header nav a:focus {
    background: var(--color-accent);
    color: #181a1b;
  }
  footer {
    background: var(--color-bg-alt);
    border-top: 1px solid var(--color-border);
    text-align: center;
    padding: 1.5rem 0 1rem 0;
    font-size: 0.95rem;
  }
  main {
    max-width: 720px;
    margin: 2.5rem auto 0 auto;
    padding: 2rem 1.25rem 3rem 1.25rem;
  }
  section {
    margin-bottom: 2.5rem;
  }
  h1, h2, h3 {
    font-weight: 700;
    margin-top: 0;
    margin-bottom: 0.75em;
    letter-spacing: -0.01em;
  }
  h1 {
    font-size: 2.2rem;
  }
  h2 {
    font-size: 1.4rem;
    color: var(--color-accent);
  }
  h3 {
    font-size: 1.1rem;
  }
  button, input, select, textarea {
    font-family: inherit;
    font-size: 1rem;
  }
  img, video {
    max-width: 100%;
    border-radius: var(--radius);
  }
  .skip-link {
    position: absolute;
    left: -999px;
    top: auto;
    width: 1px;
    height: 1px;
    overflow: hidden;
    z-index: 100;
    background: var(--color-accent);
    color: #181a1b;
    padding: 0.5em 1em;
    border-radius: var(--radius);
    transition: left var(--transition);
  }
  .skip-link:focus {
    left: 1rem;
    top: 1rem;
    width: auto;
    height: auto;
    outline: 2px solid var(--color-accent);
  }
  @media (prefers-color-scheme: light) {
    :root {
      --color-bg: #f3f4f6;
      --color-bg-alt: #e5e7eb;
      --color-fg: #181a1b;
      --color-link: #2563eb;
      --color-link-hover: #1d4ed8;
      --color-border: #d1d5db;
    }
    header, footer {
      background: var(--color-bg-alt);
      border-bottom: 1px solid var(--color-border);
    }
  }
  /* Focus states */
  :focus {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }
</style>