---
// AffiliateCard component
export interface Props {
  name: string;
  description: string;
  priceText?: string;
  retailer: string;
  link: string;
  note?: string;
}
const { name, description, priceText, retailer, link, note } = Astro.props;
---
<article style="border: 1px solid var(--color-border); border-radius: var(--radius); padding: 1em; margin-bottom: 1em; background: var(--color-bg-alt);">
  <h3>{name}</h3>
  <p>{description}</p>
  {priceText && <p><strong>{priceText}</strong></p>}
  <p>
    <a href={link} rel="sponsored noopener noreferrer" target="_blank">Buy at {retailer}</a>
    {note && <span style="display:block; font-size:0.95em; color:var(--color-fg); margin-top:0.5em;">{note}</span>}
  </p>
</article>
